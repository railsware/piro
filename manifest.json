{
  "manifest_version": 2,
  "name": "PiRo",
  "version": "2.0.0",
  "default_locale": "en",
  "description": "__MSG_app_description__",
  "background": {
    "scripts": ["public/assets/background.min.js"]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Piro",
    "default_icon": "public/images/icon.png",
    "default_popup": "popup.html?popup"
  },
  "omnibox": { 
    "keyword" : "piro"
  },
  "icons": { 
    "16": "public/images/icon19.png",
    "19": "public/images/icon19.png",
    "32": "public/images/icon32.png",
    "48": "public/images/icon48.png",
    "128": "public/images/icon128.png"
  },
  "permissions": [
    "background",
    "tabs",
    "notifications",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "public/images/icon19.png",
    "public/images/icon32.png",
    "public/images/icon48.png",
    "public/images/icon128.png",
    "public/images/favicon.ico"
  ]
}